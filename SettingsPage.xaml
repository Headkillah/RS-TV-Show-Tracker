<UserControl x:Class="RoliSoft.TVShowTracker.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid TextBlock.Foreground="White">
        <TextBlock Text="Update database" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <Separator HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,35,10,0" />
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0">
            The database is automatically updated every 24 hours or the next time you start the application in case you missed the update.<LineBreak />
            If you want to initiate a manual update click on the Update database button. Updating more than once in a day is useless,<LineBreak />
            since the data doesn't change that frequently and you'll just end up overloading the database provider's server.
        </TextBlock>
        <Button Name="UpdateDatabase" Content="  Update database  "  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Click="UpdateDatabaseButtonClick" />
    </Grid>
</UserControl>
